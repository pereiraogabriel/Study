#include <stdio.h>
//Definir em qual idade Joao sera maior que Marcelo


int main(){
  float altmar = 1.20, altjo = 1.05, crescianomar = 0.05, crescianojo = 0.07;
  int id = 8;
  
 while (altmar >= altjo){
      
    altmar = altmar + crescianomar;
    altjo =  altjo + crescianojo;
    id = id + 1;
    
  }
  
  printf("Nesta idade João será maior que Marcelo: %d anos\n", id);
  printf("Altura do Joao %.2fm\n", altjo);
  printf("Altura do Marcelo %.2fm", altmar); 
    
  
    return 0;
}
